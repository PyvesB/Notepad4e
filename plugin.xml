<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Notepad4e"
            class="io.github.pyvesb.notepad4e.preferences.PreferencePage"
            id="notepad4e.preferences.PreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="io.github.pyvesb.notepad4e.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name"
            id="Notepad4e">
      </category>
      <view
            name="Notepad"
            icon="/icons/note.png"
            category="Notepad4e"
            class="io.github.pyvesb.notepad4e.views.NotepadView"
            id="notepad4e.views.NotepadView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="notepad4e.views.NotepadView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
	point="org.eclipse.ui.commands">
	<category
        id="notepad4e.command.category"
        name="Notepad4e" 
        description="%category.description">
  </category>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.note.new"
            description="%command.description.new_note"
            name="%command.name.new_note">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.bold"
            description="%command.description.bold"
            name="%command.name.bold">
      </command>
       <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.italic"
            description="%command.description.italic"
            name="%command.name.italic">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.underline"
            description="%command.description.underline"
            name="%command.name.underline">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.strikeout"
            description="%command.description.strikeout"
            name="%command.name.strikeout">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.bullet.list"
            description="%command.description.list"
            name="%command.name.list">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.clear"
            description="%command.description.clear_style"
            name="%command.name.clear_style">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.note.clear"
            description="%command.description.clear_note"
            name="%command.name.clear_note">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.undo"
            description="%command.description.undo"
            name="%command.name.undo">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.text.redo"
            description="%command.description.redo"
            name="%command.name.redo">
      </command>
      <command
            categoryId="notepad4e.command.category"
            id="notepad4e.command.note.close"
            description="%command.description.close"
            name="%command.name.close">
      </command>
       </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="notepad4e.command.note.new"
            contextId="notepad4e.context"
            sequence="M1+T"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.bold"
            contextId="notepad4e.context"
            sequence="M1+B"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.italic"
            contextId="notepad4e.context"
            sequence="M1+I"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.underline"
            contextId="notepad4e.context"
            sequence="M1+U"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.strikeout"
            contextId="notepad4e.context"
            sequence="M1+S"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.bullet.list"
            contextId="notepad4e.context"
            sequence="M1+L"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.clear"
            contextId="notepad4e.context"
            sequence="M1+D"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.note.clear"
            contextId="notepad4e.context"
            sequence="M1+K"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.undo"
            contextId="notepad4e.context"
            sequence="M1+Z"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.text.redo"
            contextId="notepad4e.context"
            sequence="M1+M2+Z"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="notepad4e.command.note.close"
            contextId="notepad4e.context"
            sequence="M1+W"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="notepad4e.context"
            name="%context.name"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
</plugin>
